{
  "manifest_version": 3,
  "name": "Surge - Stand Up Reminder",
  "version": "1.0.0",
  "description": "A Chrome extension that reminds you to stand up at regular intervals",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Surge - Stand Up Reminder"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}