  "description": "A Chrome extension that just alerts you with a custom message at regular intervals",
  "main": "index.js",
  "scripts": {
    "build": "tsc && webpack --mode=production",
    "dev": "tsc && webpack --mode=development --watch",
    "clean": "rm -rf dist/*",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "copy-webpack-plugin": "^12.0.2"
  },
  "keywords": ["chrome-extension", "reminder", "health", "productivity"],
  "author": "masa-fukui",
  "license": "MIT"
}